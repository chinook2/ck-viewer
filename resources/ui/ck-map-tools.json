{
    "layout": "border",
    "items": [{
		"xtype": "panel",
        "bind": {
            "title": "{name}"
        },
        "region": "north",
		"height": 45,
        "split": true,
        "dockedItems": [{
            "xtype": "toolbar",
            "dock": "top",
            "overlay": true,
            "top": 0,
            "defaults": {
                "scale": "small"
            },
            "items": [{
                "text": "en",
                "toLocale": "en",
                "ckAction": "cklocaleSet"
            },{
                "text": "fr",
                "toLocale": "fr",
                "ckAction": "cklocaleSet"
            },{
                "text": "es",
                "toLocale": "es",
                "ckAction": "cklocaleSet"
            }]
        }]
    },{
        "xtype": "cklegend",
        "region": "west",
        "width": 250,
        "split": true
    },{
        "xtype": "ckmap",        
        "region": "center",
        "center": [260000, 5900000],
        "zoom": 6,
        "dockedItems": [{
            "xtype": "cktoolbar",
            "dock": "right",
			"defaults": {
				"scale": "large"
			},
			"items": [{
				"ckAction": "ckOpenOverview"
			},{
				"ckAction": "ckmapResetview"
			},{
				"ckAction": "ckmapZoomin"
			},{
				"ckAction": "ckmapZoomout"
			},{
				"xtype": "ckgroup",
				"tooltip": "Measure tools",
				"iconCls": "fa fa-asterisk",
				"items": [{
					"ckAction": "ckmapMeasureLength"
				},{
					"ckAction": "ckmapMeasureArea"
				},{
					"ckAction": "ckmapMeasureClear"
				}]
			},{
				"xtype": "ckgroup",
				"tooltip": "Select tools",
				"iconCls": "fa fa-info-circle",
				"items": [{
					"ckAction": "ckmapSelectPoint"
				},{
					"ckAction": "ckmapSelectCircle"
				},{
					"ckAction": "ckmapSelectBox"
				}]
			}]
		},{
            "xtype": "toolbar",
            "dock": "bottom",
            "items": [{
                "xtype": "tbtext",
                "bind": {
                    "html": "Centre : {x} {y}"
                }
            },{
                "xtype": "tbtext",
                "bind": {
                    "html": "Bbox : {xmin},{ymin},{xmax},{ymax}"
                }
            },{
                "xtype": "combo",
                "fieldLabel": "Echelle",
                "displayField": "scale",
                "valueField": "res",
                "reference": "mapScales",
                "bind": {
                    "value": "{resolution}",
                    "store":"{scales}"
                }
            }]
        }]
    }]
}